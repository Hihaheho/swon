{
    "comments": {
        "lineComment": "//",
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "colorizedBracketPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "`", "close": "`", "notIn": ["string"] },
        { "open": "```", "close": "```", "notIn": ["string"] }
    ],
    "autoCloseBefore": ";:.,=}])> \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["`", "`"],
        ["```", "```"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{$",
        "decreaseIndentPattern": "^\\s*[}\\]]"
    },
}
